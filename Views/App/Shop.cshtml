
@model IEnumerable<Product>
<h2 class="text-center">Shop</h2>
<p class="text-center">Count @Model.Count()</p>
<div class="row">
    
        @foreach (var p in Model)
        {
            <div class="col-md-4 p-1">
                <div class="border bg-light rounded p-1">
                <img src="~/img/@(p.ArtID).jpg" class="img-fluid mx-auto d-block" />
                <h3>@p.Category - @p.Size</h3>
                <ul >
                    <li>Price: $@p.Price</li>
                    <li>Artist: @p.Artist</li>
                    <li>Title: @p.Title</li>
                    <li>Description: @p.ArtID</li>
                </ul>
                <button id="buyButton" class="btn btn-success">Buy</button>
                </div>
            </div>
        }

</div>